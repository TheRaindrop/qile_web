.icontainer
    width 100%
    // height 950px
    color #000
    font-size 18px
    .container
        position relative
        width 1200px
        left 50%
        margin-left -600px
        .header
            padding-top 50px
            height 60px
            .head
                .head-into
                    width 150px
                    height 34px
                    position relative
                    left 50%
                    margin-left -75px    
                    span
                        display inline-block
                        float left
                        width 35px
                        height 35px
                        background-position 0 0
                        background-repeat no-repeat 
                        background-image url('http://r.syyx.com/qile/product/game.png')
                        padding-bottom 5px
                    p
                        display inline-block
                        float right
                        padding-bottom 5px
                        font-size 25px
                        font-weight bold
                        border-bottom solid 2px #21a2dd
            hr
                margin-bottom 10px
        .game-list
            height 762px
            ul.list
                list-style none
                li.game
                    width 386px
                    display  inline-block
                    margin-left 21px
                    margin-top 40px
                    a
                        width 100%
                        height 100%
                        img
                            width 386px
                            height 240px
                        .out
                            color white
                            height 100px
                            background-color #222222
                            text-align center
                            padding 0 5px
                            margin-top -5px
                            strong
                                display block
                                margin-bottom 5px
                                padding-top 5px
                            p.span
                                font-size 16px
                                word-wrap break-word
                                height 45px
                                overflow hidden
                                text-overflow ellipsis
                    a:hover
                        p
                            color #2b95ca 
                // li.game:first-child
                //     margin-left 0
            ul.list>li.game:nth-child(1),ul.list>li.game:nth-child(4)
                margin-left 0
        .pages
            margin-top 40px
            margin-bottom 40px
            ul.page
                display inline-block
                position relative
                li
                    display inline-block
                    margin auto 10px
                    a
                        border solid #000 1px
                        text-align center
                        display inline-block
                        height 25px
                        box-shadow -2px 0px 2px #000;
                    a.active
                        color #2b95ca
                        border-color #2b95ca
                    a.index
                        width 25px
                    a:hover
                        border-color #2b95ca
        .article
            .title
                text-align center
                font-size 25px
                font-weight bold
                margin-bottom 15px
            .date
                text-align center
                font-size 15px
            .hr
                border-top 1px dashed #cccccc
                margin-top 15px
                margin-bottom 15px
