extends ../include/frame

append ihead
    link(rel='stylesheet',href='/stylesheets/index/main.css')
append logo
    p 首页推送
append icontent
    ul.nav.nav-tabs
        li.active: a(href='index') 幕布推送
        li: a(href='game-index') 游戏推送
        li: a(href='hot-index') 最热游戏
        li: a(href='news-index') 动态推送
    
               
    .two-form       
        section#publish  
            p 游戏列表          
            .hr
            table(class='table table-hover')
                thead
                    tr
                        th id
                        th 标题
                        th 操作
                tbody
                    tr(v-for='(item, index) in list')
                        td {{item.id}}
                        td {{item.title}}
                        td: a.mouse(@click='push(index)') 推送

        section#push    
            p 推送列表          
            .hr
            table(class='table table-hover')
                thead
                    tr
                        th id
                        th 标题
                        th 操作
                tbody
                    tr(v-for='(item, index) in list')
                        td {{item.item_id}}
                        td {{item.title}}
                        td: a.mouse(@click='unpush(index)') 撤回



    //modal-lg
    .modal.fade.add(tabindex='-1',role='dialog',aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    button.close: span(aria-hidden='true', data-dismiss='modal') &times;
                    h4.modal-title 图片上传
                .modal-body
                    p add list from exist elements
                .modal-footer
                    button.btn.btn-primary Save changes
                    button.btn.btn-secondary(data-dismiss='modal') Close
    //modal-middle
    .modal.fade.mid#modal_game(tabindex='-1',role='dialog',aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close: span(aria-hidden='true', data-dismiss='modal') &times;
                    h4.modal-title 图片上传
                .modal-body
                    form
                        .form-group
                            label(for='page_img') 封面图片
                            .upload_pic(@click='upload_img(item)')
                                input(type='file', name='imgFile', data-file='')
                .modal-footer
                    button.btn.btn-default(data-dismiss='modal') 取消
                    button.btn.btn-primary(@click='sub_page(item)') 保存

append iscript
    script(src='/vendor/kindeditor-4.1.5/kindeditor.js')
    script(src='http://r.syyx.com/vendor/jquery-file-upload-9.10.0/js/vendor/jquery.ui.widget.js')
    script(src='http://r.syyx.com/vendor/jquery-file-upload-9.10.0/js/jquery.fileupload.js')
    script(src='/javascripts/index/main.js')